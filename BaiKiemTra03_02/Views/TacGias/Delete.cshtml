@model BaiKiemTra03_02.Models.TacGia

@{
    ViewData["Title"] = "Xóa Tác Giả";
}

<h2>@ViewData["Title"]</h2>

<div class="container">

    <h3>Bạn có chắc chắn muốn xóa tác giả: <strong>@Model.TenTacGia</strong>?</h3>
    <form method="post" asp-action="DeleteConfirm" id="deleteForm">
        <input asp-for="TacGiaId" type="hidden" />
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <dt class="col-sm-2">Tên Tác Giả</dt>
            <dd class="col-sm-10">@Model.TenTacGia</dd>
        </div>
        <div class="form-group">
            <dt class="col-sm-2">Năm Sinh</dt>
            <dd class="col-sm-10">@Model.NamSinh</dd>
        </div>
        <div class="form-group">
            <dt class="col-sm-2">Quốc Tịch</dt>
            <dd class="col-sm-10">@Model.QuocTich</dd>
        </div>

        <button type="submit" class="btn btn-danger" onclick="return confirmDelete();">Xóa</button>
        <a asp-action="Index" class="btn btn-secondary">Hủy</a>
    </form>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")

    <script>
        function confirmDelete() {
            return confirm('Bạn có chắc chắn muốn xóa tác giả này không?');
        }
    </script>
}
