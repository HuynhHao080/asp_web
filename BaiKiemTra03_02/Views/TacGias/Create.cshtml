@model BaiKiemTra03_02.Models.TacGia

@{
    ViewData["Title"] = "Thêm Tác Giả Mới";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="TenTacGia" class="control-label">Tên Tác Giả</label>
        <input asp-for="TenTacGia" class="form-control" />
        <span asp-validation-for="TenTacGia" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="QuocTich" class="control-label">Quốc Tịch</label>
        <input asp-for="QuocTich" class="form-control" />
        <span asp-validation-for="QuocTich" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="NamSinh" class="control-label">Năm Sinh</label>
        <input asp-for="NamSinh" class="form-control" />
        <span asp-validation-for="NamSinh" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Thêm Tác Giả" class="btn btn-primary" />
    </div>
</form>

<div>
    <a asp-action="Index" class="btn btn-secondary">Quay Lại Danh Sách</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
