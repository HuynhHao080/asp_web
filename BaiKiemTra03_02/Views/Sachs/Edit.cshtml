@model BaiKiemTra03_02.Models.Sach

@{
    ViewData["Title"] = "Chỉnh Sửa Sách";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Edit" method="post">
    <div class="form-group">
        <label asp-for="TieuDe" class="control-label">Tiêu Đề</label>
        <input asp-for="TieuDe" class="form-control" />
        <span asp-validation-for="TieuDe" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="TacGiaId" class="control-label">Tác Giả</label>
        <select asp-for="TacGiaId" class="form-control" asp-items="ViewBag.TacGiaId"></select>
        <span asp-validation-for="TacGiaId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="NamXuatBan" class="control-label">Năm Xuất Bản</label>
        <input asp-for="NamXuatBan" class="form-control" />
        <span asp-validation-for="NamXuatBan" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="TheLoai" class="control-label">Thể Loại</label>
        <input asp-for="TheLoai" class="form-control" />
        <span asp-validation-for="TheLoai" class="text-danger"></span>
    </div>
    <input type="hidden" asp-for="SachId" />

    <div class="form-group">
        <input type="submit" value="Cập Nhật Sách" class="btn btn-primary" />
    </div>
</form>

<div>
    <a asp-action="Index" class="btn btn-secondary">Quay Lại Danh Sách</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
