@model IEnumerable<BaiKiemTra03_02.Models.Sach>

@{
    ViewData["Title"] = "Danh Sách Sách";
}

<h2>@ViewData["Title"]</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

<div class="mb-3">
    <a asp-action="Create" class="btn btn-primary">Thêm Sách Mới</a>
</div>

<table class="table table-striped table-bordered">
    <thead class="table-light">
        <tr>
            <th>Mã Sách</th>
            <th>Tiêu Đề</th>
            <th>Tác Giả</th>
            <th>Năm Xuất Bản</th>
            <th>Thể Loại</th>
            <th>Thao Tác</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var sach in Model)
            {
                <tr>
                    <td>@sach.SachId</td>
                    <td>@sach.TieuDe</td>
                    <td>@sach.TacGia.TenTacGia</td>
                    <td>@sach.NamXuatBan</td>
                    <td>@sach.TheLoai</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@sach.SachId" class="btn btn-info btn-sm">Chi Tiết</a>
                        <a asp-action="Edit" asp-route-id="@sach.SachId" class="btn btn-warning btn-sm">Sửa</a>
                        <a asp-action="Delete" asp-route-id="@sach.SachId" class="btn btn-danger btn-sm">Xóa</a>
                    </td>

                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="6" class="text-center">Không có sách nào được tìm thấy.</td>
            </tr>
        }
    </tbody>
</table>
