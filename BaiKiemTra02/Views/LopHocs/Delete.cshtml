@model BaiKiemTra02.Models.LopHoc

@{
    ViewData["Title"] = "Xóa Lớp Học";
}

<h2>@ViewData["Title"]</h2>


<div class="container">
    
    <h3>Bạn có chắc chắn muốn xóa lớp học: <strong>@Model.TenLopHoc</strong>?</h3>
    <form method="post" asp-action="DeleteConfirm" id="deleteForm">
        <input asp-for="Id" type="hidden" />
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
                <dt class="col-sm-2">Tên lớp học</dt>
                <dd class="col-sm-10">@Model.TenLopHoc</dd>
        </div>
        <div class="form-group">
                <dt class="col-sm-2">Năm nhập học</dt>
                <dd class="col-sm-10">@Model.NamNhapHoc</dd>
        </div>
        <div class="form-group">
                <dt class="col-sm-2">Năm ra trường</dt>
                <dd class="col-sm-10">@Model.NamRaTruong</dd>
        </div>
            <div class="form-group">
            <dt class="col-sm-2">Số lượng sinh viên</dt>
            <dd class="col-sm-10">@Model.SoLuongSinhVien</dd>
            </div>
        
        <button type="submit" class="btn btn-danger" onclick="return confirmDelete();">Xóa</button>
        <a asp-action="Index" class="btn btn-secondary">Hủy</a>
    </form>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")

    <script>
        function confirmDelete() {
            return confirm('Bạn có chắc chắn muốn xóa lớp học này không?');
        }
    </script>
}

</div>
