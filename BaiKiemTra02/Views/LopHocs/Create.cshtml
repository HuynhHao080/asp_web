@model BaiKiemTra02.Models.LopHoc

@{
    ViewData["Title"] = "Thêm Lớp Học";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="TenLopHoc" class="control-label">Tên Lớp Học</label>
        <input asp-for="TenLopHoc" class="form-control" />
        <span asp-validation-for="TenLopHoc" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="NamNhapHoc" class="control-label">Năm Nhập Học</label>
        <input asp-for="NamNhapHoc" class="form-control" type="number" />
        <span asp-validation-for="NamNhapHoc" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="NamRaTruong" class="control-label">Năm Ra Trường</label>
        <input asp-for="NamRaTruong" class="form-control" type="number" />
        <span asp-validation-for="NamRaTruong" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="SoLuongSinhVien" class="control-label">Số Lượng Sinh Viên</label>
        <input asp-for="SoLuongSinhVien" class="form-control" type="number" />
        <span asp-validation-for="SoLuongSinhVien" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Lưu</button>
    <a asp-action="Index" class="btn btn-secondary">Hủy</a>
</form>
